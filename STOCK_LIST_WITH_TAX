*&---------------------------------------------------------------------*
*& Report ZON_STOK_KDV
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
REPORT ZON_STOK_KDV.


TYPES: BEGIN OF GTY_LIST,
         STOCK_ID        TYPE Z_STOCK_ID,     " Stok ID
         STOCK_NAME      TYPE Z_STOCK_NAME,   " Stok ad#
         STOCK_QTY       TYPE Z_STOCK_QTY,    " Stok miktar#
         STOCK_PRICE       TYPE Z_STOCK_PRICE,    " Geli# fiyat#
         STOCK_SELL      TYPE Z_STOCK_SELL,   " Sat## fiyat#
         KDV_DAHIL_FIYAT TYPE P DECIMALS 2,   " KDV dahil sat## fiyat#
         LINE_COLOR TYPE CHAR4,                 " LINE COLOR #LE TABLODAK# SATIRA/SATIRLARA RENK VERMEK #Ç#N BUNU SONRADAN EKLED#K.
         CELL_COLOR TYPE SLIS_T_SPECIALCOL_ALV, " CELL COLOR #LE TABLODAK# TEK B#R HÜCREYE RENK VERMEK #Ç#N BUNU SONRADAN EKLED#K.
       END OF GTY_LIST.

DATA: GT_LIST TYPE TABLE OF GTY_LIST WITH DEFAULT KEY, " #ç tablo
      GS_LIST TYPE GTY_LIST.                          " Çal##ma yap#s#

DATA: LT_FIELDCAT TYPE SLIS_T_FIELDCAT_ALV,  " ALV fieldcatalog tablosu
      LS_FIELDCAT TYPE SLIS_FIELDCAT_ALV.    " Fieldcatalog yap#s#


***** LAYOUT OLU#TURACA#IZ *****

DATA: GS_LAYOUT TYPE SLIS_LAYOUT_ALV.


***** EVENTS OLU#TURACA#IZ (FIELD CATALOG SATIRLARI #Ç#NDE) *****

DATA: GT_EVENTS TYPE SLIS_T_EVENT,
      GS_EVENT TYPE SLIS_ALV_EVENT.

***** CELL COLOR #Ç#N DATA TANIMLAMAMIZ GEREK#YOR *****
DATA: GS_CELL_COLOR TYPE SLIS_SPECIALCOL_ALV.   "CELL COLOR TANIMLAYACAKSAK BUNU OLU#TURMAMIZ GEREK#YOR.




START-OF-SELECTION.
  " Stok tablosundaki verileri al
  SELECT STOCK_ID
         STOCK_NAME
         STOCK_QTY
         STOCK_PRICE
         STOCK_SELL
    INTO CORRESPONDING FIELDS OF TABLE GT_LIST
    FROM ZON_STOK_LIST.

    LOOP AT GT_LIST INTO GS_LIST.                       "CELL COLOR #Ç#N KULLANILAN KODLAR.
  IF GS_LIST-STOCK_QTY EQ '0'.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_QTY'.
    GS_CELL_COLOR-COLOR-COL = 6.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_NAME'.
    GS_CELL_COLOR-COLOR-COL = 6.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_ID'.
    GS_CELL_COLOR-COLOR-COL = 6.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'KDV_DAHIL_FIYAT'.
    GS_CELL_COLOR-COLOR-COL = 6.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_SELL'.
    GS_CELL_COLOR-COLOR-COL = 6.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
  ENDIF.

 IF GS_LIST-STOCK_QTY EQ '1'.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_QTY'.
    GS_CELL_COLOR-COLOR-COL = 7.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_NAME'.
    GS_CELL_COLOR-COLOR-COL = 7.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_ID'.
    GS_CELL_COLOR-COLOR-COL = 7.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'KDV_DAHIL_FIYAT'.
    GS_CELL_COLOR-COLOR-COL = 7.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_SELL'.
    GS_CELL_COLOR-COLOR-COL = 7.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
  ENDIF.

  IF GS_LIST-STOCK_QTY EQ '2'.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_QTY'.
    GS_CELL_COLOR-COLOR-COL = 3.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_NAME'.
    GS_CELL_COLOR-COLOR-COL = 3.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_ID'.
    GS_CELL_COLOR-COLOR-COL = 3.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'KDV_DAHIL_FIYAT'.
    GS_CELL_COLOR-COLOR-COL = 3.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    CLEAR: GS_CELL_COLOR.
    GS_CELL_COLOR-FIELDNAME = 'STOCK_SELL'.
    GS_CELL_COLOR-COLOR-COL = 3.
    GS_CELL_COLOR-COLOR-INT = 0.
    GS_CELL_COLOR-COLOR-INV = 0.
    APPEND GS_CELL_COLOR TO GS_LIST-CELL_COLOR.
    MODIFY GT_LIST FROM GS_LIST.
  ENDIF.
  ENDLOOP.

  " KDV dahil fiyat# hesapla ve tabloyu güncelle
  LOOP AT GT_LIST INTO GS_LIST.
    GS_LIST-KDV_DAHIL_FIYAT = GS_LIST-STOCK_SELL * '1.20'.
    MODIFY GT_LIST FROM GS_LIST.
  ENDLOOP.

  " Fieldcatalog ayarlar#n# yap
  CLEAR LT_FIELDCAT.

  " STOCK_ID kolonunu ekle
  CLEAR LS_FIELDCAT.
  LS_FIELDCAT-FIELDNAME = 'STOCK_ID'.
  LS_FIELDCAT-SELTEXT_M = 'Stok ID'.
  LS_FIELDCAT-KEY       = ABAP_TRUE.
  APPEND LS_FIELDCAT TO LT_FIELDCAT.

  " STOCK_NAME kolonunu ekle
  CLEAR LS_FIELDCAT.
  LS_FIELDCAT-FIELDNAME = 'STOCK_NAME'.
  LS_FIELDCAT-SELTEXT_M = 'Stok Ad#'.
  APPEND LS_FIELDCAT TO LT_FIELDCAT.

  " STOCK_QTY kolonunu ekle
  CLEAR LS_FIELDCAT.
  LS_FIELDCAT-FIELDNAME = 'STOCK_QTY'.
  LS_FIELDCAT-SELTEXT_M = 'Stok Miktar#'.
  APPEND LS_FIELDCAT TO LT_FIELDCAT.

  " STOCK_SELL (Sat## fiyat#) kolonunu ekle
  CLEAR LS_FIELDCAT.
  LS_FIELDCAT-FIELDNAME = 'STOCK_SELL'.
  LS_FIELDCAT-SELTEXT_M = 'Sat## Fiyat#'.
  LS_FIELDCAT-OUTPUTLEN = 15.
  APPEND LS_FIELDCAT TO LT_FIELDCAT.

  " KDV_DAHIL_FIYAT (KDV dahil fiyat) kolonunu ekle
  CLEAR LS_FIELDCAT.
  LS_FIELDCAT-FIELDNAME = 'KDV_DAHIL_FIYAT'.
  LS_FIELDCAT-SELTEXT_M = 'KDV Dahil Fiyat'.
  LS_FIELDCAT-OUTPUTLEN = 15.
  APPEND LS_FIELDCAT TO LT_FIELDCAT.


***** LAYOUT EKL#YORUZ *****
  GS_LAYOUT-WINDOW_TITLEBAR    = 'REUSE ALV MM RAPORU'.
  GS_LAYOUT-ZEBRA              = ABAP_TRUE.     " TABLO ZEBRA GÖRÜNTÜSÜ ALIYOR KOLAY BAKMAK #Ç#N
  GS_LAYOUT-COLWIDTH_OPTIMIZE  = ABAP_TRUE.     " KOLONLARIN UZUNLU#UNU OPTIMIZE EDER
  GS_LAYOUT-BOX_FIELDNAME      = 'SELKZ'.       " BUNU EKLEY#NCE EN BA#TA B#R KOLON AÇILIYOR 'SELECT ALL' KOLONU
*  GS_LAYOUT-INFO_FIELDNAME     = 'LINE_COLOR'.  " BUNU EKLEY#NCE SATIRLARA RENK VEREB#L#YORSUN.
  GS_LAYOUT-COLTAB_FIELDNAME   = 'CELL_COLOR'.  " BUNU EKLEY#NCE HÜCRELERE TEK TEK RENK VEREB#L#YORSUN.

***** EVENT OLU#TURUYORUZ ***** " SAYFANIN BA#INDA VE SONUNDA AÇIKLAMA TABLOLARI KOYUYORUZ.
  GS_EVENT-NAME = SLIS_EV_TOP_OF_PAGE.
  GS_EVENT-FORM = 'TOP_OF_PAGE'.
  APPEND GS_EVENT TO GT_EVENTS.


  CALL FUNCTION 'REUSE_ALV_GRID_DISPLAY'
 EXPORTING
*   I_INTERFACE_CHECK                 = ' '
*   I_BYPASSING_BUFFER                = ' '
*   I_BUFFER_ACTIVE                   = ' '
   I_CALLBACK_PROGRAM                 = SY-REPID
*   I_CALLBACK_PF_STATUS_SET          = ' '
*   I_CALLBACK_USER_COMMAND           = ' '
*   I_CALLBACK_TOP_OF_PAGE             = 'TOP_OF_PAGE'   TOP_OF_PAGE FORMU OLU#TURACA#IZ
*   I_CALLBACK_HTML_TOP_OF_PAGE       = ' '
*   I_CALLBACK_HTML_END_OF_LIST       = ' '
*   I_STRUCTURE_NAME                  =
*   I_BACKGROUND_ID                   = ' '
*   I_GRID_TITLE                      =
*   I_GRID_SETTINGS                   =
   IS_LAYOUT                          = GS_LAYOUT
   IT_FIELDCAT                        = LT_FIELDCAT
*   IT_EXCLUDING                      =
*   IT_SPECIAL_GROUPS                 =
*   IT_SORT                           =
*   IT_FILTER                         =
*   IS_SEL_HIDE                       =
*   I_DEFAULT                         = 'X'
*   I_SAVE                            = ' '
*   IS_VARIANT                        =
   IT_EVENTS                          = GT_EVENTS   "TOP_OF_PAGE FORMU OLU#TURACA#IZ
*   IT_EVENT_EXIT                     =
*   IS_PRINT                          =
*   IS_REPREP_ID                      =
*   I_SCREEN_START_COLUMN             = 0
*   I_SCREEN_START_LINE               = 0
*   I_SCREEN_END_COLUMN               = 0
*   I_SCREEN_END_LINE                 = 0
*   I_HTML_HEIGHT_TOP                 = 0
*   I_HTML_HEIGHT_END                 = 0
*   IT_ALV_GRAPHICS                   =
*   IT_HYPERLINK                      =
*   IT_ADD_FIELDCAT                   =
*   IT_EXCEPT_QINFO                   =
*   IR_SALV_FULLSCREEN_ADAPTER        =
* IMPORTING
*   E_EXIT_CAUSED_BY_CALLER           =
*   ES_EXIT_CAUSED_BY_USER            =
  TABLES
    T_OUTTAB                          = GT_LIST
* EXCEPTIONS
*   PROGRAM_ERROR                     = 1
*   OTHERS                            = 2
          .
IF SY-SUBRC <> 0.
* Implement suitable error handling here
ENDIF.




FORM TOP_OF_PAGE.
DATA: LT_HEADER TYPE SLIS_T_LISTHEADER,
      LS_HEADER TYPE SLIS_LISTHEADER.
DATA: LV_DATE TYPE CHAR10.
DATA: LV_LINES TYPE I,
      LV_LINES_C TYPE CHAR4.


CLEAR: LS_HEADER.
LS_HEADER-TYP = 'H'.
LS_HEADER-INFO = 'Ürün Sat## Listesi'.
APPEND LS_HEADER TO LT_HEADER.

CLEAR: LS_HEADER.
LS_HEADER-TYP = 'S'.
LS_HEADER-KEY = 'Tarih:'.
CONCATENATE SY-DATUM+6(2)
            '.'
            SY-DATUM+4(2)
            '.'
            SY-DATUM+0(4)
            INTO LV_DATE.
LS_HEADER-INFO = LV_DATE.
APPEND LS_HEADER TO LT_HEADER.

CLEAR: LS_HEADER.
LS_HEADER-TYP = 'A'.
CONCATENATE 'Raporda'
             LV_LINES_C
            'Adet Kalem Vard#r.'
             INTO LS_HEADER-INFO SEPARATED BY SPACE.
APPEND LS_HEADER TO LT_HEADER.
DESCRIBE TABLE GT_LIST LINES LV_LINES.
LV_LINES_C = LV_LINES.

CALL FUNCTION 'REUSE_ALV_COMMENTARY_WRITE'
  EXPORTING
    IT_LIST_COMMENTARY       = LT_HEADER.
ENDFORM.
